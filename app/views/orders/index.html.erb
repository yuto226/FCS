<div id = "main">
<div id = "order_index">
  <p><%= flash[:notice]%></p>
  <div style="text-align:center;"><i><%= Date.today%></i></div>
  <%= form_for @order_status, :url => {:action => 'complete'} do |f|%>
  <div id="contents">
    <% if @order.blank?%>
    <p>まだ注文がありません!!</p>
    <% else%>
  <% @order.each do |order|%>
  <div id = "orders">
  <table class = "table table-bordered">
  <tbody>
    <tr>
      <td rowspan="2"><%= f.check_box 'id', {multiple: true}, order.id, false %></td>
      <td colspan="2">テーブル番号:</td>
    </tr>
    <tr>
      <td>
        商品名：<%= order.product.name%>
      </td>
      <td>
        数量：<%= order.amount%>
      </td>
    </tr>
    <tr>
      <th colspan="3">備考</th>
    </tr>
    <tr>
      <td colspan="3"><%= order.product.option%></td>
  </th>
    </tr>
    </tbody>
  </table>
  </div>
  <%end%>
  <%end%>
</div>
  <!--<div><%= button_to "完了済み一覧を表示する。",method:'get',action:'complete_index'%></div>-->
  <div class = "form_area"><%= f.button "チェックしたものを完了する。"%></div>
<div class = "page_nate_area"><%= paginate @order %></div>
<%end%>
</div>
<!--end of order_index-->
</div>
<!--end of main-->
